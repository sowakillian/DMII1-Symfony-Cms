{% trans_default_domain "administration" %}
<form method="post" action="{{ path('equipement_delete', {'id': equipement.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ equipement.id) }}">
    <button class="basic-button equipment-delete">{% trans %}Delete{% endtrans %}</button>
</form>
