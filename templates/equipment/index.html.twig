{% extends 'administration/base.html.twig' %}
{% trans_default_domain "equipment" %}

{% block title %}{% trans %}Equipments{% endtrans %}{% endblock %}

    {% block admincontent %}

        <div class="dashboard-header">
            <h1 class="dashboard-title">{% trans %}Equipments{% endtrans %}</h1>
            <a class="basic-button" href="{{ path('equipment_new') }}">{% trans %}Add an equipment{% endtrans %}</a>
        </div>

    <table class="table">
        <thead>
            <tr>
                <th>{% trans %}State{% endtrans %}</th>
                <th>{% trans %}Name{% endtrans %}</th>
                <th>{% trans %}Serial number{% endtrans %}</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for equipment in equipments %}
            <tr>
                <td>{{ equipment.state }}</td>
                <td>{{ equipment.name }}</td>
                <td>{{ equipment.serialNumber }}</td>
                <td>
                    <a href="{{ path('equipment_show', {'id': equipment.id}) }}"><img src="{{ asset('images/icon_show.svg') }}" alt="Show"></a>
                    <a href="{{ path('equipment_edit', {'id': equipment.id}) }}"><img src="{{ asset('images/icon_edit.svg') }}" alt="Edit"></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">{% trans %}No equipment has been added{% endtrans %}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% endblock %}
