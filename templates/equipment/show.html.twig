{% extends 'administration/base.html.twig' %}
{% trans_default_domain "administration" %}

{% block title %}{{ equipment.name }}{% endblock %}

{% block admincontent %}
    <div class="dashboard-header">
        <h1 class="dashboard-title">Equipment detail</h1>
        <a class="basic-button" href="{{ path('equipment_index') }}">{% trans %}Back to list{% endtrans %}</a>
    </div>

    <div class="equipment">
        <img src="/uploads/medias/{{ equipment.media.path }}" class="equipment-photo">
        <div class="equipment-desc">
            <div class="equipment-desc-title">
                {{ equipment.name }} <span></span>
            </div>
            <div class="equipment-desc-details">
                <span>Catégorie: {{ equipment.category.name }} </span><span>N° série: {{ equipment.serialNumber }}</span>
            </div>
            <div class="equipment-desc-description">
                <p>{{ equipment.description }}</p>
            </div>
            <div class="equipment-desc-actions">
                <a class="basic-button" href="{{ path('equipment_edit', {'id': equipment.id}) }}">{% trans %}Edit{% endtrans %}</a>
                {{ include('equipment/_delete_form.html.twig') }}
            </div>
        </div>
    </div>


{% endblock %}
