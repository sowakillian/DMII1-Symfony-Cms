{% extends 'administration/base.html.twig' %}
{% trans_default_domain "booking" %}

{% block title %}Booking{% endblock %}

{% block admincontent %}
    <div class="dashboard-header">
        <h1 class="dashboard-title">{% trans %}Booking{% endtrans %}</h1>
        <a class="basic-button" href="{{ path('booking_index') }}">{% trans %}Back to list{% endtrans %}</a>
    </div>

    <table class="table">
        <tbody>
            <tr>
                <th>{% trans %}NÂ°{% endtrans %}</th>
                <td>{{ booking.id }}</td>
            </tr>
            <tr>
                <th>{% trans %}Book by{% endtrans %}</th>
                <td>{{ booking.user.firstName }} {{ booking.user.lastName }}</td>
            </tr>
            <tr>
                <th>{% trans %}Loaning{% endtrans %}</th>
                <td>{{ booking.loaningDate ? booking.loaningDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>{% trans %}Return{% endtrans %}</th>
                <td>{{ booking.returnDate ? booking.returnDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>{% trans %}Status{% endtrans %}</th>
                <td>{{ booking.status }}</td>
            </tr>
            <tr>
                <th>Equipment</th>
                <td>{% for equipment in booking.equipments %}{{ equipment.name }}{% endfor %}</td>
            </tr>
        </tbody>
    </table>

    <div class="dashboard-buttons-bottom">
        <a class="basic-button" href="{{ path('booking_edit', {'id': booking.id}) }}">{% trans %}Edit{% endtrans %}</a>
        {{ include('booking/_delete_form.html.twig') }}
    </div>

{% endblock %}
