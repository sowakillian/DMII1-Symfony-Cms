{% trans_default_domain "booking" %}

<div class="row">
    <div class="col-3">
        <div class="row row-cols-md-3">

            {% for category in categories %}
                {% if category.getEquipements()|length > 0 %}
                <div class="col mb-4">
                    <div class="card category-card" data-target="{{ category.id }}">

                        <div class="card-body">

                            <h5 class="card-title">{{ category.name }}</h5>
                            <p class="card-text">{{ category.getEquipements()|length }} {% trans %}equipment available{% endtrans %}</p>

                        </div>

                    </div>

                </div>
                {% endif %}
            {% endfor %}

        </div>
    </div>

    <div class="col">
        {{ form_start(form) }}
        <div class="row row-cols-md-3">
            <div class="col">
                    {{ form_widget(form.equipements) }}
            </div>
        </div>
        <div class="d-flex justify-content-center mt-3">
            <button class="btn btn-dark" type="submit">{{ button_label|default('Validate the equipment')|trans }}</button>
        </div>
        
        {{ form_end(form, {'render_rest': false}) }}
    </div>
</div>