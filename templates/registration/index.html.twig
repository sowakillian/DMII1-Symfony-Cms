{# templates/registration/index.html.twig #} {% extends 'base.html.twig' %} {%
    block body %}
    <div class="login">
        <h1 class="login-title">Gobooking</h1>
    <a href="{{ path('app_login') }}" class="login-button login-button__white">Se connecter</a>
    <div class="login-formwrapper">
        <div class="login-onboarding">
            <div><img src="{{ asset('images/logo_gobelins.png') }}" alt="Logo Gobelins!"/></div>
            <p>Inscrivez-vous sur Gobooking en utilisant votre e-mail Gobelins</p>
        </div>
                        {{ form_start(form) }}
                        <div class="form_group">
                            <div class="col-md-12 mb-3">
                                {{ form_row(form.firstName, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                        <div class="form_group">
                            <div class="col-md-12 mb-3">
                                {{ form_row(form.lastName, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                        <div class="form_group">
                            <div class="col-md-12 mb-3">
                                {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                        <div class="form_group">
                            <div class="col-md-12 mb-3">
                                {{ form_row(form.password.first, {'attr': {'class':
                                    'form-control'}}) }}
                            </div>
                        </div>
                        <div class="form_group">
                            <div class="col-md-12 mb-3">
                                {{ form_row(form.password.second, {'attr': {'class':
                                    'form-control'}}) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-8 col-md-offset-4" style="margin-top:5px;">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fa fa-btn fa-user"></i> S'inscrire
                                </button>
                            </div>
                        </div>
                        {{ form_end(form) }}
        </div>
    </div>
{% endblock %}